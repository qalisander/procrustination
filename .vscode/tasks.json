{
	"version": "2.0.0",
	"tasks": [
		{
			// "subcommand": "build",
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build",
		},
		// running tests in file with ctrl+u+u
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--package",
				"${workspaceFolderBasename}",
				"--lib",
				"${fileBasenameNoExtension}"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				// "isDefault": true
			},
			"label": "rust: cargo test"
		},
		// running integrational tests with ctrl+u+u
		{
			"type": "cargo",
			"command": "test",
			"args": [
				"--package",
				"${workspaceFolderBasename}",
				"--test",
				"${fileBasenameNoExtension}"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo module test"
		}
	]
}